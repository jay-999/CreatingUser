<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#AB673AB7"
    android:layout_height="match_parent"
    tools:context=".SetUpProfileActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/update_profile_toolbar">
    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="My Profile Details"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Username"
        android:id="@+id/update_username"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="firstname"
        android:id="@+id/update_firstname"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Lastname"
        android:id="@+id/update_lastname"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="textImeMultiLine"
        android:hint="status"
        android:id="@+id/update_status"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="textImeMultiLine"
        android:hint="Favourite team"
        android:id="@+id/update_team"
        android:layout_height="wrap_content">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content">


        <com.hbb20.CountryCodePicker
            android:id="@+id/update_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:ccp_autoDetectCountry="true">

        </com.hbb20.CountryCodePicker>

        <EditText
            android:layout_width="match_parent"
            android:inputType="phone"
            android:hint="Phone number"
            android:id="@+id/update_phone"
            android:layout_height="wrap_content">
        </EditText>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="Update Profile"
        android:id="@+id/update_profile_button"
        android:layout_height="wrap_content">

    </Button>

</LinearLayout>